<body>
    <div class="container" id="maincontainer">
        <form>
            <div class="mb-3 container">
                <label for="alarm" class="form-label text-light"><h1>Date & Time</h1></label>
                <input type="text" class="form-control" id="alarm" aria-describedby="emailHelp"
                    placeholder="Enter the time in yyyy-mm-dd hh:mm:ss">
            </div>
            <button id="submitalarm" type="submit" class="btn btn-primary">Set</button>
        </form>
    </div>
